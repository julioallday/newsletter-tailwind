{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  // Add those two lines:
  "editor.formatOnSave": true, // Tell VSCode to format files on save
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Tell VSCode to use Prettier as default file formatter
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#007413",
    "activityBar.activeBorder": "#130080",
    "activityBar.background": "#1a4b30",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#008000",
    "activityBarBadge.foreground": "#e7e7e7",
    "sash.hoverBorder": "#19044b",
    "statusBar.background": "#093f24",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#08331b",
    "statusBarItem.remoteBackground": "#08331b",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#08331b",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#08331b",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.remoteColor": "#410000",
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  }
}
